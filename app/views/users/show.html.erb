<% set_meta_tags title: 'プロフィール', description: 'Inssta Cloneアカウントのプロフィール画面です。' %>
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      <%= gravatar_for @user %>
      <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
    <%= render 'shared/stats' %>
    </section>
    <section class="introduction">
      <div class="introduction-title">
        <i class="fa fa-user"></i> Introduction
        </div>
        <p><%= @user.introduction %></p>
    </section>
    <section class="web-site">
     <div class="web-site-title">
      <i class="fa fa-globe"></i>Website
      </div>
      <p><%= link_to @user.web_site %></p>
    </section>
    <section>
      <%= render 'follow_form' if logged_in? %>
    </section>
  </aside>

  <div class="col-md-8">
  <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <hr>
    <ol class="microposts">
    <%= render @microposts %>
    </ol>
      <%= will_paginate @microposts %>
      <% end %>
  </div>
</div>
