<% set_meta_tags title: 'プロフィール', description: 'Inssta Cloneアカウントのプロフィール画面です。' %>

<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      <%= gravatar_for @user %>
      <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
    <%= render 'shared/stats' %>
    </section>
    <section class="introduction">
      <div class="introduction-title">
        <i class="fa fa-user"></i> Introduction
        </div>
    </section>
    <section class="web-site">
     <div class="web-site-title">
      <i class="fa fa-globe"></i>Website
      </div>
    </section>
    <section>
      <%= render 'follow_form' if logged_in? %>
    </section>
  </aside>

  <div class="col-md-8">
  <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
    <% @microposts.each do |micropost| %>
      <ol id="micropost-<%= micropost.id %>"> 
        <div class="col-sm-4" data-toggle="modal" data-target="#exampleModalCenter-<%= micropost.id %>">
          <div class="col-sm-4">
            <%= image_tag micropost.display_thum if micropost.image.attached? %>
          </div>
        </div>

        <div class="modal fade" id="exampleModalCenter-<%= micropost.id %>" tabindex="-1" role="dialog"   aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title" id="exampleModalCenterTitle">Comment</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <% @comments = micropost.comments %>
                <%= render 'comment', {micropost: micropost, comment: @comment} %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
              </div>
          </div>
        </div>
      </ol>
    <% end %>
    <% end %>
  </div>
</div>
<%= will_paginate @microposts %>
