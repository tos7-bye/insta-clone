<% visitor = notification.visitor %>
<% micropost = notification.micropost %>

<div class="notification-view clearfix">
  <%= link_to user_path(visitor) do %>
    <%= gravatar_for visitor, size: 50 %>
    <strong><%= visitor.name %></strong>
  <% end %>
  <span>さん</span>
  <%= notification_form(notification) %>
  <br>
  <% if !@comment.nil? %>
    <p class="moderate-font" style="color: #C0C0C0;"><%= @comment %></p>
  <% end %>
  <span class="moderate-font">
    <%= " #{time_ago_in_words(notification.created_at)}前" %>
  </span>
  <hr>
</div>
